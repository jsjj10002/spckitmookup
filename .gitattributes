# Auto detect text files and perform LF normalization
* text=auto

# Explicitly declare text files
*.md text
*.js text
*.ts text
*.tsx text
*.jsx text
*.json text
*.html text
*.css text
*.py text
*.yml text
*.yaml text
*.toml text

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.pdf binary
*.zip binary
*.db binary
*.sqlite binary
*.sqlite3 binary

# SQL files
*.sql text eol=lf

# Batch files (Windows)
*.bat text eol=crlf

# Shell scripts (Unix)
*.sh text eol=lf

